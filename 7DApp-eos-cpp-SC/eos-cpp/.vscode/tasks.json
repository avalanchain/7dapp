{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "reveal": "always",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": ".vscode/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"     
        }
    ]
}
